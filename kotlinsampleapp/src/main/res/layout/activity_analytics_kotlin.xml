<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyticsKotlinActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp">

    <TextView
        android:id="@+id/moengage_app_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/moengage_app_id_xxxxxxx" />

    <TextView
        android:id="@+id/segment_write_key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/segment_write_key_xxxxxxx" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="24dp"
        android:background="#F5F5F5" />

    <EditText
        android:id="@+id/text_alias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/alias" />

    <Button
        android:id="@+id/button_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="@string/set_alias" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="24dp"
        android:background="#F5F5F5" />

    <EditText
        android:id="@+id/text_user_attribute_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:hint="@string/user_trait_name" />

    <EditText
        android:id="@+id/text_user_attribute_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:hint="@string/user_trait_value" />

    <Button
        android:id="@+id/pick_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="@string/pick_time" />

    <Button
        android:id="@+id/button_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="@string/identify" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="24dp"
        android:background="#F5F5F5" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reset" />


  </LinearLayout>

</ScrollView>